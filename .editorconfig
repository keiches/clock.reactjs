# https://github.com/josephfrazier/editorconfig-to-prettier

root = true

[*]
indent_style = space
indent_size = 2
# https://github.com/prettier/prettier/issues/5351#issuecomment-436156231
# indent_size = unset
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
# editorconfig-tools is unable to ignore longs strings or urls
max_line_length = off

[{*.htm,*.html,*.ejs,*.tem}]
insert_final_newline = false
